        },
        "hovered": {
          "value": "$color.status.critical.weak",
          "type": "color"
        },
        "pressed": {
          "value": "$color.status.critical.strong",
          "type": "color"
        }
      }
    },
    "neutral": {
      "background": {
        "default": {
          "value": "$color.status.neutral.default",
          "type": "color"
        },
        "hovered": {
          "value": "$color.status.neutral.weak",
          "type": "color"
        },
        "pressed": {
          "value": "$color.status.neutral.strong",
          "type": "color"
        }
      }
    },
    "text": {
      "default": {
        "value": "{color.text.onSolid}",
        "type": "color"

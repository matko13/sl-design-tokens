{
  "badge": {
    "success": {
      "background": {
        "default": {
          "value": "$color.status.success.default",
          "type": "color"
        },
        "hovered": {
          "value": "{color.status.success.weak}",
          "type": "color"
        },
        "pressed": {
          "value": "{color.status.success.stronger}",
          "type": "color"
        }
      },
      "subdued": {
        "background": {
          "success": {
            "value": "$color.status.success.weaker",
            "type": "color"
          },
          "info": {
            "value": "$color.status.info.weaker",
            "type": "color"
          },
          "warning": {
            "value": "$color.status.warning.weaker",
            "type": "color"
          },
          "critical": {
            "value": "$color.status.critical.weaker",
            "type": "color"
          },
          "neutral": {
            "value": "$color.status.neutral.weaker",
            "type": "color"
          }
        }
      }
    },
    "info": {
      "background": {
        "default": {
          "value": "$color.status.info.default",
          "type": "color"
        },
        "hovered": {
          "value": "$color.status.info.weak",
          "type": "color"
        },
        "pressed": {
          "value": "$color.status.info.strong",
          "type": "color"
        }
      }
    },
    "warning": {
      "background": {
        "default": {
          "value": "$color.status.warning.default",
          "type": "color"
        },
        "hovered": {
          "value": "$color.status.warning.weak",
          "type": "color"
        },
        "pressed": {
